    "@types/diff": "^7.0.1",
    "@types/jsdom": "^21.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.11.19",
    "@types/wordwrap": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
